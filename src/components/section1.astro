---
const {color} = Astro.props
---

<section class="section-principal">
	<div class="container-principal">
		<div class="containerLeft">
			<div class="container-Presentacion">
				<img src="image 1784.webp" alt="Hola">
				<div class="container-Saludo">
					<p>¡Hola! 
						<span>me llamo,</span>
					</p>
					<h1>Ferney Nava</h1>
				</div>
			</div>
			<h2 class="container-Profesion">
					<span class="typed"></span>
			</h2>
			<nav>
				<ul class="menu-Social">
					<li>
						<a href="https://www.linkedin.com/in/ferney-alexander-nava-trujillo-0478a8118/"  target="_blank" rel="noopener noreferrer">
							<img src="LinkedIn.svg" alt="LinkedIn">
								LinkedIn
						</a>
					</li>
					<li>
						<a href="https://github.com/ferneynava"  target="_blank" rel="noopener noreferrer">
							<img class="Github" src="GitHub.svg" alt="GitHub">
								GitHub
						</a>
					</li>
					<li>
						<a href="mailto:ferneynava@gmail.com" rel="noopener noreferrer">
							<img src="Correo.svg" alt="ferneynava@gmail.com" >
								ferneynava@gmail.com
						</a>
					</li>
			</nav>
		</div>
		<div class="containerRight">
			<img src="FotoFull.webp" alt="Foto FerneynavaDev">
		</div>	
	</div>
    <div class="container-Flecha">
		<a class="container-Flecha_button" href="#sobre-mi">
			<img src="Flecha.svg" alt="Flecha abajo">
		</a >
	</div>
</section>

<style define:vars={{color}}>

	.section-principal{
		min-height: 100vh;
		display: flex;
		align-items: center;
		flex-direction: column;
		gap: 4rem;
		margin: 115px auto 0px;
	}
	
	.container-principal {
		display: flex;
		flex-direction: row-reverse;
		align-items: center;
		gap: 5.5rem;
	}
	
	.containerLeft{
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}	

	.container-Presentacion{
		display: flex;
		padding: 1.75rem;
		align-items: center;
		background: rgba(13, 15, 16, 0.549);
		border-radius: 16px;
		border: 2px solid white;
		backdrop-filter: blur(20px);
		flex-wrap: wrap;
	}

	.container-Saludo p{
		font-size: 2.125rem;
		line-height: 2.563rem;
		font-weight: 500;
		color: white;
		margin: 0;
	}

	.container-Saludo span{
		color: var(--color);
	}

	.container-Saludo h1{
		color: var(--color);
		font-size: 3.125rem;
		font-weight: 900;
		line-height: 4.875rem;
		margin: 0;
	}

	.container-Profesion{
		color: var(--color);
		height: 70px;
		text-align: center;
		font-size: 2.0625rem;
		font-weight: 900;
		line-height: 2.5rem;
	}

	.menu-Social{
		display: flex;
		gap: 1rem;
		list-style: none;
		letter-spacing: 0.05rem;
		padding: 0;
		align-items: center;
		align-content: center;
		justify-content: center;
		flex-wrap: wrap;
	} 

	.menu-Social a{
		display: flex;
		padding: 0.5rem 1rem;
		color: #000000;
		font-size: 1rem;
		line-height: 1.5rem;
		text-decoration: none;
		border-radius:  3.125rem;
		background:  var(--color);
		align-items: center;
		gap: 0.4375rem;
	}

	.menu-Social a {
		box-shadow: 0 0 25px rgb(0,140,255);
	}

	.menu-Social a:hover{
		box-shadow: 0 0 5px rgb(0,140,255),
                0 0 25px rgb(0,140,255),
                0 0 50px rgb(0,140,255),
                0 0 100px rgb(0,140,255);
	}

	.Github{
		width: 24px;
		height: 24px;
	}

	.containerRight{
		display: flex;
		justify-content: center;
	}

	.container-Flecha{
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		flex-grow: 1;

	}

	.container-Flecha_button{	
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: transparent;
		border: none;
		border-radius: 50%;
		cursor: pointer;
		height: 3.3rem;
		width: 3.3rem;
	}

	.container-Flecha_button{
		box-shadow: 0 0 25px rgb(0,140,255);
	}

	.container-Flecha_button:hover{
		box-shadow: 0 0 5px rgb(0,140,255),
                0 0 25px rgb(0,140,255),
                0 0 50px rgb(0,140,255),
                0 0 100px rgb(0,140,255);
	}

	.container-Flecha_button img{
		width: 4rem;
		height: 4rem;
	}

	.container-Flecha p{
		color: white;
		font-size: 12px;
		font-weight: 400;
		line-height: 16px;
		letter-spacing: 0.17rem;
	}

	@media (max-width: 960px) {
		.section-principal{
			margin-left: 14rem;
			margin-top: 10rem;
			padding-bottom: 34px;
			gap: 5rem;
		}

		.container-principal{
			flex-direction: column;
			gap: 2rem;
		}

		.containerLeft{
			gap: 1rem;
		}

		.container-Presentacion{
			justify-content: center;
			padding: 1rem;
			gap: 2rem;
		}

		.container-Saludo p{
			font-size: 3rem;
			line-height: 2rem;
		}

		.container-Saludo h1{
			font-size: 4rem;
			line-height: 6rem;
		}
		.container-Profesion{
			font-size: 4rem;
			line-height: 5rem;
		}

		.menu-Social{
			flex-direction: column;
			padding-top: 5rem;
			gap: 2rem;
		}
		
		.menu-Social a{
			padding: 1rem 2rem;
			font-size: 2rem;
			line-height: 1rem;
		}

		.menu-Social a img{
			width: 3rem;
			height: 3rem;
		}

		.container-Flecha{
			margin-top: 1rem;
		}
		.container-Flecha_button{
			height: 3.3rem;
			width: 3.3rem;
		}
		.container-Flecha_button img{
			width: 5rem;
			height: 5rem;
		}
		.container-Flecha p{
			font-size: 10px;
			line-height: 12px;
		}
	}

	@media (max-width: 900px) {
		.section-principal{
			margin-left: 2rem;
			margin-top: 10rem;
		}
	}

	@media (max-width: 800px) {
		.section-principal{
			margin-left: 2rem;
			margin-top: 10rem;
		}
	}

	@media (max-width: 600px) {
		.section-principal{
			margin-left: 13rem;
			margin-top: 10rem;
		}
	}

	@media (max-width: 500px) {
		.section-principal{
			margin-left: 19rem;
			margin-top: 10rem;
		}
	}

	@media (max-width: 400px) {
		.section-principal{
			margin-left: 25rem;
			margin-top: 10rem;
		}
	}

	@media (max-width: 200px) {
		.section-principal{
			margin-left: 24rem;
			margin-top: 10rem;
		}
	}

</style>

<script>
	import Typed from 'typed.js'; 
	

		const typed = new Typed(".typed" ,{
			strings: ["Licenciado en electrónica","Desarrollador de Software"],
			typeSpeed: 80,
			loop: true,
		});


</script>