<style define:vars={{color}}>
    .container-Primary{
		max-width: 1200px;
		margin: 0rem auto;
		display: flex;
		flex-direction: column;
		gap: 9px;
        padding-top: 3rem;
	}

    .container-Primary h2 {
        color:var(--color);
        font-size: 5rem;
		font-weight: 700;
		line-height: 6.3125rem;
		margin: 0;
    }
	
    .container-Portafolio {
        display: grid;
        grid-template-columns: repeat(2, minmax(500px, 1fr));
        justify-content: center;
        column-gap: 11rem;
        row-gap: 4rem;
        align-self: stretch;
        align-items: flex-start;
    }

    .container-Portafolio_Tajeta{
        width: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 12px;
        background-color: #212529;
        box-shadow: 0 0 25px rgb(0,140,255);
    }

    .container-Portafolio_Tajeta:hover{
        box-shadow: 0 0 5px rgb(0,140,255),
                0 0 25px rgb(0,140,255),
                0 0 50px rgb(0,140,255),
                0 0 100px rgb(0,140,255);
    }

    .container-Portafolio_img {
        height: 20rem;
        border-radius: 12px 12px 0rem 0rem;
        justify-content: flex-end;
        align-items: center;
        align-self: stretch;
        object-fit: cover;
    }

    .container-Portafolio_Descripcion {
        display: flex;  
        padding: 0rem 2rem;
        flex-direction: column;
        align-items: flex-start;
        gap: 2px;
        align-self: stretch;
        
    }	

    .container-Portafolio_Descripcion h3 {
        color: white;
        font-size: 1.5rem;
        font-weight: 900;
        margin: 0;
        padding: 1rem 0;
        border-bottom: 1px solid #6C757D;
        width: 100%;
        letter-spacing: 0.05rem;
    }	

    .menu-tecnologias {
        display: flex;
        gap: 2rem;
        list-style: none;
        letter-spacing: 0.05rem;
        align-items: center;
        align-content: center;
        justify-content: center;
        flex-wrap: wrap;
        margin: 0;
        padding: 1rem 0;
		width: 100%;
    }

    .menu-tecnologias li {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .menu-tecnologias p{
        color: white;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.7rem;
        margin: 0;
    }

    .menu-tecnologias img{
        width: 2.625rem;
        height: 2.625rem;
        object-fit: contain;
    }

    .container-Portafolio_p{
        color: white;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.7rem;
        margin: 0;
        padding: 1rem 0;
		border-top: 1px solid #6C757D;
    }

    .container-Portafolio_Button{
        display: flex;
        justify-content: space-around;
        list-style: none;
        letter-spacing: 0.05rem;    
        padding: 1rem 0;
        align-items: center;
        align-content: center;
        flex-wrap: wrap;
        border-top: 1px solid #6C757D;
        width: 100%;
    }

    .container-Portafolio_Button a{
        display: flex;
        align-items: center;
        gap: 0.4375remrem;
        color: #000000;
        font-size: 1rem;
        font-weight: 600;
        line-height: 1.7rem;
        margin: 0;
        padding: 0.5rem 1rem;
        border-radius:  3.125rem;
        text-decoration: none;
        background:  var(--color);
    }

    .container-Portafolio_Button a{
        box-shadow: 0 0 25px rgb(0,140,255);
    }

    .container-Portafolio_Button a:hover{
        box-shadow: 0 0 5px rgb(0,140,255),
                0 0 25px rgb(0,140,255),
                0 0 50px rgb(0,140,255),
                0 0 100px rgb(0,140,255);
    }

    @media (max-width: 960px) {
        
        .container-Portafolio {
            grid-template-columns: repeat(1, minmax(600px, 1fr));
            justify-items: center;
            row-gap: 4rem;
			margin-top: 1rem;
            margin-left: 1px;

        }

        .container-Primary h2{
            margin-top: 4rem;
            margin-left: 2rem;
        }

        .container-Portafolio_Descripcion h3{
            font-size: 2rem;
        }

        .menu-tecnologias p{
            font-size: 1.5rem;
        }

        .container-Portafolio_p{
            font-size: 1.5rem;
        }

        .container-Portafolio_Button a{
            padding: 1rem 2rem;
            font-size: 1.8rem;
        }

        .container-Portafolio_Button a img{
            width: 2rem;
            height: 2rem;
        }
    }


    @media (max-width: 800px) {

        .container-Portafolio {
            grid-template-columns: repeat(1, minmax(500px, 1fr));
            margin-left: 9rem;
			margin-top: 1rem;
        }

        .container-Primary h2{
            margin-top: 3rem;
            margin-left: 2rem;
        }

        .container-Portafolio_Descripcion h3{
            font-size: 2rem;
        }

        .menu-tecnologias p{
            font-size: 1.5rem;
        }

        .container-Portafolio_p{
            font-size: 1.5rem;
            line-height: 2.5rem;
        }

        .container-Portafolio_Button a{
            padding: 1rem 2rem;
            font-size: 1.8rem;
        }
    }

    @media (max-width: 800px) {

        .container-Portafolio {
            grid-template-columns: repeat(1, minmax(500px, 1fr));
            margin-left: 13rem;
			margin-top: 1rem;
        }
    }

    @media (max-width: 500px) {
        .container-Portafolio {
            grid-template-columns: repeat(1, minmax(500px, 1fr));
            margin-left: 17rem;
			margin-top: 1rem;
        }

        .container-Portafolio_Descripcion h3{
